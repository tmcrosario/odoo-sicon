<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- WINDOW ACTION -->
    <record id="event_type_action_form"
            model="ir.actions.act_window">
        <field name="name">Event Types</field>
        <field name="res_model">sicon.event_type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- FORM VIEW -->
    <record id="event_type_view_form"
            model="ir.ui.view">
        <field name="name">sicon.event_type.view.form</field>
        <field name="model">sicon.event_type</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
