<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- FORM VIEW -->
    <record id="view_add_event_wizard_form"
            model="ir.ui.view">
        <field name="name">sicon.add_event_wizard.form</field>
        <field name="model">sicon.add_event_wizard</field>
        <field name="arch"
               type="xml">
            <form>
                <div class="oe_title">
                    <label for="name"
                           class="oe_edit_only"
                           string="New event for" />
                    <h2>
                        <field name="concession_id" readonly="True"/>
                    </h2>
                </div>
                <group>
                    <group string="Event Data">
                        <field name="date" />
                        <field name="event_type_id"
                               options="{'no_create': True}" />
                        <field name="name" />
                        <field name="document_id"
                               options="{'no_create': True}" />
                        <field name="other_related_document" />
                        <field name="modify_concession" />
                    </group>
                    <group string="Concession Data"
                           attrs="{'invisible':[('modify_concession','=',False)]}">
                        <field name="concessionaire_id"
                               context="{'default_concessionaire': True}"
                               attrs="{'required':[('state','=', 'awarded')]}" />
                        <field name="canon"
                               attrs="{'invisible':[('state', 'not in', ['awarded', 'precarious', 'on_term'])]}" />
                        <field name="start_date" />
                        <field name="expiration_date" />
                        <field name="state" />
                    </group>
                </group>
                <footer>
                    <button name="save_event"
                            type="object"
                            string="Save"
                            class="oe_highlight"
                            confirm="This action will made changes to the concession. Are you sure you want to continue?"
                            attrs="{'invisible':[('modify_concession','=', False)]}" />
                    <button name="save_event"
                            type="object"
                            string="Save"
                            class="oe_highlight"
                            attrs="{'invisible':[('modify_concession','=', True)]}" /> or
                    <button string="Discard"
                            class="oe_link"
                            special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.ui.view"
            id="view_sicon_concessions_listing_report_wizard_form">
        <field name="name">sicon.concessions_listing.report.wizard.form</field>
        <field name="model">sicon.concessions_listing.report.wizard</field>
        <field name="arch"
               type="xml">
            <form>
                <group>
                    <field name="listing" />
                </group>
                <footer>
                    <button name="check_and_generate_report"
                            type="object"
                            string="_Print"
                            context="{'report_name': 'concessions_listing'}"
                            icon="fa-file-text-o"
                            class="oe_highlight" />
                    <button special="cancel"
                            string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

    <act_window id="add_event_wizard_action"
                name="Event Entry"
                res_model="sicon.add_event_wizard"
                view_id="view_add_event_wizard_form"
                view_mode="form"
                target="new"
                key2="client_action_multi" />

    <act_window id="concessions_listing_report_wizard_action"
                name="Generate Concessions Report"
                res_model="sicon.concessions_listing.report.wizard"
                view_mode="form"
                target="new"
                view_id="view_sicon_concessions_listing_report_wizard_form"
                key2="client_action_multi" />

</odoo>
