<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- FORM VIEW -->
    <record id="view_concession_partner_form"
            model="ir.ui.view">
        <field name="name">sicon.concession.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id"
               ref="base.view_partner_form" />
        <field eval="90"
               name="priority" />
        <field name="arch"
               type="xml">
            <page name="internal_notes"
                  position="before">
                <page string="Concession Events">
                    <field name="event_ids">
                        <tree create="false"
                              edit="false"
                              delete="false">
                            <field name="date" />
                            <field name="concession_id" />
                            <field name="event_type_id" />
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record model="ir.actions.act_window"
            id="sicon.partner_concessionaires_list_action">
        <field name="name">Concessionaires</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('concessionaire','=',True)]</field>
        <field name="context">{'default_concessionaire': True}</field>
        <field name="help"
               type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new concessionaire.
            </p>
            <p>
                No registries were found.
            </p>
        </field>
    </record>

</odoo>
