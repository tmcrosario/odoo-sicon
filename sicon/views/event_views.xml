<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="event_tree_view"
            model="ir.ui.view">
        <field name="name">event.tree</field>
        <field name="model">sicon.event</field>
        <field name="arch"
               type="xml">
            <tree string="Events"
                  default_order="date desc document_id desc"
                  create="false"
                  decoration-bf="event_type_name=='AdjudicaciÃ³n'">
                <field name="date" />
                <field name="modify_concession"
                       invisible="True" />
                <field name="document_pdf_url"
                       invisible="True" />
                <button type="object"
                        string="View PDF"
                        name="open_document_pdf"
                        attrs="{'invisible': [('document_pdf_url', '=', False)]}"
                        icon="fa-file-pdf-o text-danger" />
                <field name="document_id" />
                <field name="event_type_id"
                       widget="many2one_unclickable" />
                <field name="event_type_name"
                       invisible="True" />
                <field name="name" />
                <field name="concessionaire_id"
                       widget="many2one_unclickable" />
                <field name="folder_file"
                       filename="folder_filename" />
                <field name="folder_filename"
                       invisible="True" />
                <button type="object"
                        string="View Historical State"
                        name="view_concession"
                        attrs="{'invisible':[('modify_concession', '=', False)]}" />
            </tree>
        </field>
    </record>

