    <!-- FORM VIEW -->
    <record id="event_form_view"
            model="ir.ui.view">
        <field name="name">sicon.event.form</field>
        <field name="model">sicon.event</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="concession_id" />
                            <field name="date"
                                   string="Date" />
                            <field name="event_type_id" />
                            <field name="name" />
                            <field name="document_id" />
                            <field name="folder_file"
                                   filename="folder_filename" />
                            <field name="folder_filename"
                                   invisible="True" />
                        </group>
                        <group>
                            <field name="create_uid"
                                   readonly="True" />
                            <field name="write_uid"
                                   readonly="True" />
                        </group>
                    </group>
                    <group>
                        <field name="related_document_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record model="ir.actions.act_window"
            id="events_list_action">
        <field name="name">Events</field>
        <field name="res_model">sicon.event</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_by_concession':True}</field>
        <field name="limit">20</field>
        <field name="help"
               type="html">
            <p class="oe_view_nocontent">
                No events were found.
            </p>
            <p>
                You can add an event editing the concession.
            </p>
        </field>
    </record>

